extends ../templates/templateApp.jade

block title
	title Colecciones

block titleSection
	p Colecciones

block modal
	section#modalActions.modal.modal-hide(data-rol-modal='modal' data-contentModal data-referenceModal='#modal')
		section.contentModal
			article.titleModal
			article.bodyModal
			article.footerModal
				button.btn.btnError.effect(data-closeModal='#modal' data-rol-modal='close' data-referenceModal='#modal') Volver

block content

	section.instructions
		p Manipula la informacion de la #[strong Base de Datos]
		p Â¡Ten Cuidado! Rectificar antes de realizar cualquier accion.

	form.form-horizontal#formCollections
		.form-group
			label(for='collection') Coleccion
			select#collection.form-control(name='collection' size='#{numberOfCollections}' required)
				for model in models
					option(value='#{model.modelName}' ) #{model.collection.collectionName}

		section#filterSearch.form.formLabelInput

		.btn-group
			button.btn.btn-info.btn-raised(type='button' id='findInCollection' data-action='find') Buscar
			button.btn.btn-success.btn-raised(type='button' id='AgregateInCollection' data-action='create') Agregar
			button.btn.btn-danger.btn-raised(type='button' id='emptyCollection' data-action='delete') Vaciar

	//section.documents#results
	//section#addDocument

	template#templateField
		.form-group#TField
			label.label
			input.data.form-control

block scripts
	script(src='/js/collections.js')





