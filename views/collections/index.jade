extends ../templates/templateApp.jade
block title
	title Colecciones

block titleSection
	p Colecciones

block content

	section.instructions
		p Manipula la informacion de la #[strong Base de Datos]
		p Â¡Ten Cuidado! Rectificar antes de realizar cualquier accion.

	form.form.formLabelInput#formCollections
		article.inputContainer
			label.label(for='collection') Coleccion
			select#collection(name='collection' size='#{numberOfCollections}' required)
				for model in models
					option(value='#{model.modelName}' ) #{model.collection.collectionName}

		article.alignItemsEnd
			input.btn.btnInfo(type='button' id='findInCollection' value='Buscar' data-action='find')
			input.btn.btnSuccess(type='button' id='AgregateInCollection' value='Agregar' data-action='create')
			input.btn.btnError(type='button' id='emptyCollection' value='Vaciar' data-action='delete')

	section.documents#results
	section#addDocument

	template#templateField
		article.inputContainer#TField
			label.label
			input.data

block scripts
	script(src='/js/collections.js')





