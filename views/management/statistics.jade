extends ../templates/templateApp.jade
block title
	title Estadisticas

block titleSection
	p Estadisticas

block modal
	section#statisticsWindow.modal.modal-hide(data-rol-modal='modal' data-contentModal data-referenceModal='#modal')
		section.contentModal
			article.titleModal
			article.bodyModal
			article.footerModal
				button.btn.btnError.effect(data-closeModal='#modal' data-rol-modal='close' data-referenceModal='#modal') Volver
block content

	section.instructions
		p Estadisticas relacionadas con la informacion el/la(los/las) niñ@s que tengas a tu cargo.

	section.statistics
		article.statistic.statisticToday(data-statistic='today')
			h2 Hoy

			p Listado de las actividades completadas de un niñ@ en el dia actual.
			include ../templatesStatistics/today.jade
		article.statistic.statisticEvolution(data-statistic='evolution')
			h2 Evolución

			p Grafica de Area. Relacion  de Actidades completadas/incompletadas en un rango de fecha determinado.
			include ../templatesStatistics/evolution.jade
		article.statistic.statisticRangeDates(data-statistic='rangeDate')
			h2 Rango De Fechas
			p Grafica de Barras comparativa. Actidades completadas/incompletadas en un rango de fecha determinado.
			include ../templatesStatistics/rangeDates.jade

	section.containerOptionsStatistic
block scripts
	script(type='text/javascript' src='https://www.gstatic.com/charts/loader.js')
	script(src='/js/statistic.js')



