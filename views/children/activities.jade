extends ../templates/templateAppChildren.jade

block title
	title Actividades

block titleSection
	p Actividades

block content
	section.activities
		each activity in activities
			article.activity(data-date="#{activity.hour}" data-speech="#{activity.text}")
				p.titleActivity #{activity.text}
				img.imgActivity(src=" #{activity.img}", alt="")
				article.reminder.inprocess
					article.titleReminder
						p
					article.date
						p(rol="time")
	script(src="/js/app.js")
