	body
		block template
		-var typesMessages = ['warning','success','info','error']
		for typeMessages in typesMessages
			if messages[typeMessages]
				for message in messages[typeMessages]
					-var messageText = message
					if message.name == "MongoError"
						-var messageText = "Error Interno."
					p(class="#{typeMessages}").message #{messageText}
