{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
		"ecmaFeatures" : {
		"modules" :true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"globals" :{
		"ajax": true,
		"confirmActivityWindow": true,
		"detailActivityActive": true,
		"CommonElement": true,
		"google": true,
		"Modal": true,
		"markdown": true,
		"response": true,
		"Text": true,
		"Validator": true,
		"NotificationC": true,
		"RangeTolerance": true,
		"Voice": true,
		"webkitSpeechRecognition": true
		},
	"extends": "eslint:recommended",
	"rules": {
"no-console": 1,
		"arrow-spacing": 1,
		"no-multi-spaces": 1,
		"no-unused-vars": 1,
		"no-extra-parens": 1,
		"no-spaced-func": 1,
		"no-trailing-spaces": 1,
		"no-whitespace-before-property": 1,
		"space-before-function-paren": 1,
		"no-empty": 1,
		"space-in-parens": [
			1,
			"always"
		],
		"comma-spacing": [
			1,
			{ "before": false, "after": true }
		],
		"quote-props": [
			1,
			"always"
		],
		"array-bracket-spacing": [
			1,
			"always"
		],
		"object-curly-spacing": [
			1,
			"always"
		],
		"key-spacing":[
			1,
			{ "beforeColon": true }
		],
		"spaced-comment": [
			1,
			"always"
		],
		"no-multiple-empty-lines": [
			1,
			{"max": 1}
		],
		"camelcase": [
			1,
			{"properties": "always"}
		],
		"indent": [
			1,
			"tab"
		],
		"linebreak-style": [
			1,
			"unix"
		],
		"quotes": [
			1,
			"single"
		],
		"semi": [
			1,
			"never"
		]
	}
}
