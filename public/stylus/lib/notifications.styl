
@keyframes ascender
	0%
		transform translateY(-10px)
	25%
		transform translateY(-5px)
	50%
		transform translateY(0px)
	75%
		transform translateY(5px)
	100%
		transform translateY(10px)

.MSG
	animation 2s ascender linear forwards
	position absolute
	right 0
	color black
	font-weight bold
	display flex
	background-color white
	height 100px
	min-width 400px
	box-shadow 4px 5px 10px 0px gray
	.contenedorMensaje
		width calc(100% - 110px)
		padding 10px
	.contenedorIcon
		width 110px
		img
			width 100%
