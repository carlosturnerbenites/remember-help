.form
	.inputContainer
		align-items center
		display flex
		margin-bottom 5px
		.label
			//font-size 1.5rem
			font-weight bold
			padding-right 5px
			text-align right
		.input
			//input
		.select
			//select
		.check
			width auto
			//radio/checkbox
		.button
			width auto
			margin 0 auto
	input, select
		appearance: none
		border 1px solid gray
		border-radius 3px
		background-color white
		margin 0 5px
		outline none
		padding 3px
		&:focus
			box-shadow 0px 0px 11px 0px rgba(0,0,0,0.1)
	&LabelInput
		input, select
			width 70%
		.label
			width 70%
	&OnlyInput
		input, select
			margin 0 auto
			width 50%


