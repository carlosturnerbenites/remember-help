.form
	.inputContainer
		align-items center
		display flex
		margin-bottom 5px
		flex-wrap wrap
		.label
			margin-top 5px
			font-weight bold
			padding-right 5px
			text-align center
			width 100%
		.input
			//input
		.select
			//select
		.check
			width auto
			//radio/checkbox
		.button
			width auto
			margin 0 auto
	input, select
		appearance: none
		border 1px solid gray
		border-radius 3px
		background-color white
		margin 0 5px
		outline none
		padding 3px
		&:focus
			box-shadow 0px 0px 11px 0px rgba(0,0,0,0.1)
		&[readOnly]
		&:disabled
			background rgba(0,0,0,0.1)
	&LabelInput
		input, select
			width 70%
			margin 0 auto
		input[type="submit"],input[type="button"]
			width auto !important
		.label
			width 70%
	&OnlyInput
		input, select
			transition all 2s linear
			margin 0 auto
			width 90%
.fieldset
	margin 20px 0
	border-radius 3px
	.legend
		font-weight bold
		border-left 1px solid gray
		padding 0 10px

@media screen and (min-width: 768px)
	.form
		&OnlyInput
			input, select
				width 50%

