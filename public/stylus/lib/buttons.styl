colorBtnConfirmarBackground = #87BC5E
colorBtnConfirmarBorder = #3C7113

colorBtnCancelarBackground = #D46A6A
colorBtnCancelarBorder = #801515

colorBtnEnviarBackground = #4D658D
colorBtnEnviarBorder = #152D54

colorBtnAyudaBackground = #D4886A
colorBtnAyudaBorder = #803315

.btn
	border none
	border-radius 5px
	color #fff
	padding 5px
	font-size 1em
	letter-spacing 3px
	cursor pointer
	display inline-block
	margin-top 10px !important
	margin-bottom 10px !important
	&:active
		transition .1s box-shadow
		box-shadow 0px 0px transparent
	&Success
		background-color colorBtnConfirmarBackground
		box-shadow 0px 6px colorBtnConfirmarBorder
	&Error
		background-color colorBtnCancelarBackground
		box-shadow 0px 6px colorBtnCancelarBorder
	&Info
		background-color colorBtnEnviarBackground
		box-shadow 0px 6px colorBtnEnviarBorder
	&Help
		box-shadow 0px 6px colorBtnAyudaBorder
		background-color colorBtnAyudaBackground
		cursor help
		margin-top 0 !important
	&:disabled
		cursor not-allowed
		box-shadow 0px 6px colorBtnDiabledBorder
		background-color colorBtnDiabledBackground
