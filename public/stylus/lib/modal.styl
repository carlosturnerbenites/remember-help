.modal
	color white
	height 100%
	opacity 0
	overflow scroll
	position fixed
	right 0
	transition 1s all linear
	width 0%
	z-index 10
	&[modalActive]
		display flex
		justify-content flex-end
		overflow-x hidden
	.contentModal
		background-color rgba(0,0,0,.9)
		overflow auto
		padding 20px
		transition all 2s linear
		width 100%
		z-index 100
		.titleModal
			border-bottom 1px solid gray
			text-align right
		.bodyModal
			border none
			padding 10px 0
		.footerModal
			bottom: 20px;
			position fixed
			.backPage
				cursor pointer
				font-size 50px

.sectionInactive
	opacity .5 !important
	overflow hidden
	pointer-events none

.effectHideModal
	opacity 0
	width 50%

.effectShowModal
	opacity 1
	width 100%

