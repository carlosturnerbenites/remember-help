@import 'normalize'
@import 'OOCSS'
@import 'lib/modal'
@import 'lib/buttons'
@import 'lib/forms'

@import 'icomoon/style'
@import url(https://fonts.googleapis.com/css?family=Lato)

body
	font-family: 'Lato', sans-serif

/*Header: Menu y Titulo de la seccion*/
header
	margin-bottom 20px
	color white !important
	nav
		align-items center
		display flex
		justify-content space-between
		a
			text-decoration none
			color inherit
		.itemsNavs
			.item
				display inline-block
				font-size 2rem
				margin 0 10px
				padding 10px
				&:last-child
					margin-right 0px
	.titleSection
		box-shadow 0 10px 30px rgba(0,0,0,0.3)
		font-size 4rem
		padding 30px 0
		padding-left 20px
		> *
			margin 0

/*Acvtividades*/
.activities
	.activity
		cursor pointer
		margin-bottom 40px
		position relative
		transition all 2s linear
		width 100%
		.imgActivity
			width 100%
		.titleActivity
			font-size 2rem
			margin 0
			position absolute
			top 0
			width 100%
			&:first-letter
				font-size 4rem
				font-weight bold
		&:last-child
			border-bottom 0
		.reminder
			color white
			display flex
			font-size 2rem
			justify-content center
			margin-bottom 10px
			.titleReminder
				align-items center
				background-position center
				background-repeat no-repeat
				background-size 110px
				display: flex;
				justify-content center
				margin 0
				transition all 1s linear
				width 40%
				&:hover
					border-bottom 1px solid transparent
			.date
				background-color rgba(0,0,0,0.7)
				background-position right
				background-repeat no-repeat
				background-size 174px
				font-size 3rem
				text-align right
				width 60%
				.meridiem
					font-size 1rem
					margin-left 10px
			.morning
				background-color rgb(255, 188, 0)
				background-image url('/images/reminders/sun.png')
				border-bottom 10px solid rgb(255, 203, 57)
			.nigth
				background-color rgb(69,90,100)
				background-image url('/images/reminders/moon.png')
				border-bottom 10px solid rgb(27, 51, 62)

		[data-statereminder="complete"]
			.titleReminder
				background-color rgb(52, 168, 83)
				background-image url('/images/reminders/complete.png')
				border-bottom 10px solid rgba(0,0,0,0.3)
		[data-statereminder="incomplete"]
			.titleReminder
				background-color rgb(236, 69, 89)
				background-image url('/images/reminders/incomplete.png')
				border-bottom 10px solid rgba(0,0,0,0.3)
		[data-statereminder="inprocess"]
			.titleReminder
				background-color rgba(0,0,0,0.3)
				background-image url('/images/reminders/clock.png')
				border-bottom 10px solid rgba(0,0,0,0.3)

/*Mensajes*/
.messages
	color white
	.message
		align-items center
		background-position center
		background-repeat no-repeat
		display: flex
		height 300px
		justify-content center
		padding 50px 0
		transition all 2s linear
		width 100%
		&:last-child
			border-bottom 0

		.title
			font-size 3rem
			text-align center
	.correct
		background-color baseGreen
		background-image url('/images/messages/correct.png')
		border-bottom 10px solid rgb(9, 118, 38)
	.warning
		background-color baseYellow
		background-image url('/images/messages/warning.png')
		border-bottom 10px solid rgb(255, 203, 57)
	.incorrect
		background-color baseRed
		background-image url('/images/messages/incorrect.png')
		border-bottom 10px solid rgb(171, 12, 31)

/*Modal de confirmacion de Actividad*/
.templateConfirmActivityWindow
	align-items center
	display flex
	font-size 10rem
	justify-content space-around
	.btn
		width 40%

/*Templates management*/
.styleBlue
	background-color baseBlue
.styleGreen
	background-color baseGreen
.styleOscure
	background-color baseOscure
.stylePurple
	background-color basePurple
.styleRed
	background-color baseRed
.styleYellow
	background-color baseYellow
